<odoo>
  <data>
    <!-- explicit list view definition -->

    <record id="gse_purchase_form" model="ir.ui.view">
        <field name="name">gse_purchase.purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                    <attribute name="readonly"/>
                </xpath>
            </data>
        </field>
    </record>

    <record id="gse_sale_form" model="ir.ui.view">
        <field name="name">gse_sale.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//form[1]/sheet[1]/div[not(@name)][1]/h1[1]/field[@name='name']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                    <attribute name="readonly"/>
                </xpath>
            </data>
        </field>
    </record>

