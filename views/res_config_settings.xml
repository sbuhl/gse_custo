<odoo>

<record id="gse_website_tree" model="ir.ui.view">
	<field name="name">gse_custom.settings.tree</field>
	<field name="model">res.config.settings</field>
	<field name="inherit_id" ref="website.res_config_settings_view_form"/>
	<field name="arch" type="xml">
		<xpath expr="//div[@id='company_settings']" position="after">
			<div class="col-12 col-lg-6 o_setting_box" groups="base.group_multi_company">
				<div class="o_setting_right_pane">
					<label string="Companies" for="website_company_ids"/>
					<span class="fa fa-lg fa-globe" title="Values set here are website-specific." groups="website.group_multi_website"/>
					<div class="text-muted">
						The companies available on the websites, for the warehouse selection
					</div>
					<field name="website_company_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}" attrs="{'required': [('website_id', '!=', False)]}" />
				</div>
			</div>
		</xpath>
	</field>
</record>

</odoo>