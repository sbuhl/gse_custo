<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="gse_report_header_footer_custom" inherit_id="web.external_layout_boxed">
		<xpath expr="//div[@name='company_address']" position="replace">
			<style>
				.o_report_layout_boxed table thead tr th{
				text-transform: capitalize!important;
				
				}
				.o_report_layout_boxed table tbody tr td{
				border-top: 1px solid black!important;
				}

			</style>
		</xpath>
		<xpath expr="//div/div[hasclass('text-center')]" position="after">
			<div>
				<img src="/gse_custo/static/img/brands.png" class="" aria-label="Brands" title="Goshop Partners" role="img"/>
			</div>
			
		</xpath>
	</template>
	<template id="gse_report_header_footer_custom_E" inherit_id="sale_management.report_saleorder_document_inherit_sale_management">
		<xpath expr="//div[@name='signature']" position="before">
			<style>
				.o_report_layout_boxed table thead tr th{
				text-transform: capitalize!important;
				
				}
				table tbody tr td{
				border-top: 1px solid black!important;
				}

			</style>
		</xpath>

	</template>
	
</odoo>